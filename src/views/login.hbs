<!doctype html>
<html lang="en" class="fullscreen-bg">
	
	<head>
		<title>Sign In</title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

	</head>

	<body>
	<!-- WRAPPER -->
	<div>
		{{>header}}
	</div>

  <div id="login" class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <p class="text-danger">{{#if errorMessage}} {{errorMessage}} {{/if}}</p>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-center">Sign In</h5>
        <form id="login-form" method="post" action="/user/login">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" name="email" required class="form-control form-control-lg" id="email" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="password" >Password</label>
            <input type="password" name="password" required class="form-control form-control-lg" id="password" placeholder="Password">
          </div>
          <button type="submit" id="submitButton" class="btn btn-primary btn-lg btn-block mt-2">Login</button>
        </form>
            <div class="text-center mt-3">
                <a href="/user/sign-up-view" class="btn btn-outline-primary">Sign Up</a>
            </div>
      </div>
    </div>
  </div>
</body>
</html>
